{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "verbs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "serviceVerbs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isInternal": {
      "type": "boolean"
    },
    "allowedDomains": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "allowedLocationLabels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isAdmin": {
      "type": "boolean"
    },
    "customFilter": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "jsonSchema": {
          "type": "object"
        },
        "uiSchema": {
          "type": "object"
        }
      },
      "dependencies": {
        "version": ["jsonSchema", "uiSchema"],
        "jsonSchema": ["version", "uiSchema"],
        "uiSchema": ["version", "jsonSchema"]
      }
    }
  },
  "required": [
    "isInternal",
    "allowedDomains",
    "allowedLocationLabels",
    "verbs",
    "serviceVerbs"
  ]
}
