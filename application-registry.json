{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "iconName": {
      "type": "string"
    },
    "sortOrder": {
      "type": "number"
    },
    "isPlatform": {
      "type": "boolean"
    },
    "url": {
      "type": "string"
    },
    "activationRoles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isAvailableInMobile": {
      "type": "boolean"
    },
    "isAvailableInWeb": {
      "type": "boolean"
    },
    "isRootApp": {
      "type": "boolean"
    },
    "enabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "disabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "supportedLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "supportedCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isHomeApp": {
      "type": "boolean"
    },
    "allServices": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "serviceRequestEmails": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string"
            },
            "perCountry": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["enabled"]
    }
  },
  "appSwitcher": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "sortOrder": {
        "type": "number"
      },
      "isPlatform": {
        "type": "boolean"
      },
      "isHomeApp": {
        "type": "boolean"
      }
    },
    "required": ["enabled", "sortOrder"]
  },
  "userMenu": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "sortOrder": {
        "type": "number"
      }
    },
    "required": ["enabled", "sortOrder"]
  },
  "required": [
    "iconName",
    "sortOrder",
    "isPlatform",
    "url",
    "isAvailableInMobile",
    "isAvailableInWeb",
    "enabledForCountries",
    "disabledForCountries",
    "supportedLanguages",
    "supportedCountries",
    "allServices",
    "appSwitcher"
  ]
}
