{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "iconName": {
      "type": "string"
    },
    "sortOrder": {
      "type": "number"
    },
    "isPlatform": {
      "type": "boolean"
    },
    "url": {
      "type": "string"
    },
    "activationRoles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isAvailableInMobile": {
      "type": "boolean"
    },
    "isAvailableInWeb": {
      "type": "boolean"
    },
    "isRootApp": {
      "type": "boolean"
    },
    "enabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "disabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "supportedLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "iconName",
    "sortOrder",
    "isPlatform",
    "url",
    "isAvailableInMobile",
    "isAvailableInWeb",
    "enabledForCountries",
    "disabledForCountries",
    "supportedLanguages"
  ]
}
