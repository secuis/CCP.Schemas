{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "iconName": {
      "type": "string"
    },
    "isPlatform": {
      "type": "boolean"
    },
    "url": {
      "type": "string"
    },
    "activationRoles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isAvailableInMobile": {
      "type": "boolean"
    },
    "isAvailableInWeb": {
      "type": "boolean"
    },
    "isRootApp": {
      "type": "boolean"
    },
    "enabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "disabledForCountries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "supportedLanguages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isHomeApp": {
      "type": "boolean"
    },
    "receiveContextFromSdpMessages": {
      "type": "boolean"
    }
  },
  "appSwitcher": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "sortOrder": {
        "type": "number"
      },
      "isPlatform": {
        "type": "boolean"
      },
      "isHomeApp": {
        "type": "boolean"
      },
      "category": {
        "type": "string",
        "enum": ["Product", "Administration", "Other"]
      }
    },
    "required": ["enabled", "sortOrder"]
  },
  "userMenu": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "sortOrder": {
        "type": "number"
      }
    },
    "required": ["enabled", "sortOrder"]
  },
  "customConfiguration": {
    "type": "object"
  },
  "required": [
    "iconName",
    "isPlatform",
    "url",
    "isAvailableInMobile",
    "isAvailableInWeb",
    "enabledForCountries",
    "disabledForCountries",
    "supportedLanguages",
    "appSwitcher"
  ]
}
